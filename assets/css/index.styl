html
body
  height 100%

#content
  box-sizing border-box
  fixed top left
  height 100%
  width 100%

#map
  height 100%
  position relative
  
  @media (max-width: 991px)
    bottom 0px
    left 0px
    height 65%
    position absolute
    width 100%

.gm-style-iw
  
  h1
    font-size 15px
    font-weight bold
    margin 0px
    margin-bottom 5px
    margin-top 3px
    padding 0px
    
    > .label
      font-size 12px
      margin-left 2px
      padding 1px 4px
    
  h2
    font-size 13px
    font-style italic
    margin 0px
    padding 0px
  
  hr
    margin 10px 0px
  
  div
    margin-bottom 2px
    
    > span
      display inline-block
      vertical-align middle
      
      &:nth-of-type(1)
        text-align right
        width 40px
        
        > .label
          font-size 12px
          margin-right 5px
          padding 1px 4px

.ui-helper-hidden-accessible
  display none

.ui-autocomplete-input
  margin-right 5px
  width 150px

.ui-autocomplete  
  margin 0 
  padding 0 
  position absolute
  list-style none
  width 150px
  padding 3px
  margin 5px 0 10px
  background rgba(0,0,0,0.8)
  border-radius 5px 
  box-sizing border-box

  &::after 
    content ""
    position absolute
    top -10px
    right 90px
    bottom auto
    left auto
    border-width 0 10px 10px
    border-style solid
    border-color rgba(0,0,0,0.8) rgba(255,255,255,0)
    display block 
    width 0

.ui-menu-item 
  margin 0 
  padding 0px 
  list-style-type none 

  a  
    padding 3px 5px
    display block
    font-size 12px
    color rgba(255,255,255,0.8)
    cursor pointer
    text-decoration none
    font-weight 300
    
    &:hover 
      color rgba(255,255,255,0.95)
      background rgba(0,0,0,0.3)
      border-radius 3px