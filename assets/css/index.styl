@import "bootstrap.css"

html
body
  height 100%

#content
  box-sizing border-box
  fixed top left
  height 100%
  width 100%

#header > small
  @media (max-width: 430px)
    display none

#map
  height 100%
  position relative
  z-index 1
  
  @media (max-width: 991px)
    bottom 0px
    left 0px
    height 100%
    padding-top 190px
    position absolute
    width 100%
    
    > .gm-style
      bottom 0px !important
      top 190px !important

#sidebar
  background #fff
  box-shadow 2px 2px 3px rgba(0, 0, 0, 0.15)
  height 100%
  overflow-y auto
  z-index 2
  
  > h3
    margin-top 15px
    margin-bottom 0px
  
  @media (max-width: 991px)
    height 190px
    overflow-y hidden

#departures
.infowindow
  h1
    font-size 15px
    font-weight 500
    margin 0px
    margin-bottom 5px
    padding 0px
    
    > .label
      font-size 12px
      margin-left 2px
      padding 1px 4px
    
  h2
    font-size 13px
    font-weight 300
    margin 0px
    padding 0px
  
  hr
    margin 10px 0px
  
  div
    margin-bottom 2px
    
    > span
      display inline-block
      vertical-align middle
      
      &:nth-of-type(1)
        text-align right
        width 40px
        
        > .label
          font-size 12px
          margin-right 5px
          padding 1px 4px

#departures
  > div
    > h1
      border-top 1px solid #e6e6e6
      margin-top 15px
      padding-top 15px
      
      > .label
        font-weight 300
      
    > h2
      margin-bottom 8px
    
    > hr
      display none
      
    > div
      font-size 12px
      text-overflow ellipsis
      overflow hidden
      white-space nowrap
      
      > span
      > span > .label
        font-weight 300
  
    @media (max-width: 991px)
      display inline-block
      margin-right 25px
      vertical-align top
      
  @media (max-width: 991px)
    overflow-x auto
    white-space nowrap
    width 100%

#form
  margin-top 15px
  width 200px
  
  @media (max-width: 991px)
    margin-top 0px
    position absolute
    right 10px
    top 10px

#address
  display inline-block
  margin-right 5px
  width 150px

.ui-helper-hidden-accessible
  display none

.ui-autocomplete
  background rgba(0,0,0,0.8)
  border-radius 5px
  box-sizing border-box
  list-style none
  margin 5px 0 10px
  padding 3px
  position absolute
  width 150px
  z-index 3

  &::after
    content ""
    position absolute
    top -10px
    right 65px
    bottom auto
    left auto
    border-width 0 10px 10px
    border-style solid
    border-color rgba(0,0,0,0.8) rgba(255,255,255,0)
    display block
    width 0

.ui-menu-item
  margin 0
  padding 0px
  list-style-type none

  a
    padding 3px 5px
    display block
    font-size 12px
    color rgba(255,255,255,0.8)
    cursor pointer
    text-decoration none
    font-weight 300
    
    &:hover
      color rgba(255,255,255,0.95)
      background rgba(0,0,0,0.3)
      border-radius 3px